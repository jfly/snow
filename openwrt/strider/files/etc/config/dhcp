
config dnsmasq
	option domainneeded '1'
	option localise_queries '1'
	option local '/lan/'
	option domain 'lan'
	option expandhosts '1'
	option authoritative '1'
	option readethers '1'
	# Store dhcp leases on a cheap external usb drive. This allows local dns to
	# continue working after a reboot, and doesn't use up the writes on the
	# embedded flash. See
	# https://forum.archive.openwrt.org/viewtopic.php?id=53842
	option leasefile '/mnt/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.d/resolv.conf.auto'
	option localservice '1'
	option ednspacket_max '1232'
	option rebind_protection '0'
	list address '/aragorn.lan/192.168.1.2'
	list address '/elfstone.lan/192.168.1.3'
	# Hardcode *.snow.jflei.com to clark's ip address (see /etc/dnsmasq.conf)
	list address '/snow.jflei.com/192.168.1.110'
	# Legacy: hardcode *.clark.snowdon.jflei.com to clark's ip address (see /etc/dnsmasq.conf)
	list address '/clark.snowdon.jflei.com/192.168.1.110'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option limit '150'
	option leasetime '12h'
	option dhcpv4 'server'
	list ra_flags 'managed-config'
	list ra_flags 'other-config'
	# It appears that right now at&t is restricting us to a /64 ipv6
	# allocation. It sounds like there's some workaround to get more subnets,
	# but I also hope this will just go away someday when AT&T is no longer a
	# piece of the picture.
	# See message from davygrvy about at&t fiber: https://forums.sonic.net/viewtopic.php?t=17498&start=10
	# and a dedicated thread about this: https://forums.sonic.net/viewtopic.php?t=14897
	#
	# Until we have a proper /56, we can use "relay" mode.
	# https://forum.openwrt.org/t/ipv6-configuration-relay-single-64-prefix/53461/7
	option dhcpv6 relay
	option ra relay
	option ndp relay

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'
	# See above for why we're using "relay" mode.
	option dhcpv6 relay
	option ra relay
	option ndp relay
	option master 1

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

config host
	option name 'clark'
	option ip '192.168.1.110'
	option mac 'C0:3F:D5:6B:51:16'

# Keep this in sync with k8s/kodi.yaml
config host
	option name 'dallben'
	option ip '192.168.1.163'
	option mac '1C:69:7A:AC:4C:E6'

config host
	option name 'receiver'
	option ip '192.168.1.202'
	option mac '00:A0:DE:CF:48:EF'

config dhcp 'iot'
	option interface 'iot'
	option start '100'
	option limit '150'
	option leasetime '1h'
	option netmask '255.255.255.0'

config host
	option name 'taran'
	option ip '192.168.3.101'
	option mac '50:14:79:36:E7:ED'
