config rpcd
	option socket /var/run/ubus/ubus.sock
	option timeout 30

config login
	option username 'root'
	option password '$p$root'
	list read '*'
	list write '*'

# Restrict the home-assistant user to read-only access. See
# https://forum.openwrt.org/t/json-rpc-limiting-access/116276/2
# for details.
config login
	option username 'home-assistant'
	option password '$p$home-assistant'
	list read 'luci-base-network-status'
