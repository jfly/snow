apiVersion: traefik.containo.us/v1alpha1
kind: Middleware
metadata:
  name: snowauth
spec:
  forwardAuth:
    address: http://snowauth.default.svc.cluster.local
    authResponseHeaders:
      - X-Forwarded-User
---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: auth
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.middlewares: default-snowauth@kubernetescrd
spec:
  tls:
    - hosts:
      - auth.clark.snowdon.jflei.com
      secretName: auth-tls
  rules:
  - host: auth.clark.snowdon.jflei.com
    http:
      paths:
        - path: /
          pathType: Prefix
          backend:
            service:
              name: snowauth
              port:
                number: 80
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: snowauth
  labels:
    app: snowauth
spec:
  replicas: 1
  selector:
    matchLabels:
      app: snowauth
  template:
    metadata:
      labels:
        app: snowauth
    spec:
      containers:
      - image: thomseddon/traefik-forward-auth:2
        name: snowauth
        ports:
        - containerPort: 4181
          protocol: TCP
        env:
        - name: COOKIE_DOMAIN
          value: clark.snowdon.jflei.com

        - name: AUTH_HOST
          value: auth.clark.snowdon.jflei.com
        - name: SECRET
          valueFrom:
            secretKeyRef:
              name: traefik-forward-auth-secrets
              key: traefik-forward-auth-secret
        - name: DEFAULT_PROVIDER
          value: oidc
        - name: PROVIDERS_OIDC_ISSUER_URL
          value: https://keycloak.clark.snowdon.jflei.com/realms/snow
        - name: PROVIDERS_OIDC_CLIENT_ID
          value: snowauth
        - name: PROVIDERS_OIDC_CLIENT_SECRET
          value: |-
            -----BEGIN AGE ENCRYPTED FILE-----
            YWdlLWVuY3J5cHRpb24ub3JnL3YxCi0+IFgyNTUxOSBITU1jZkhTeU5zRVd6eG1y
