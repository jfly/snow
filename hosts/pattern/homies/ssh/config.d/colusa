Host strider
    Tag colusa
    HostName strider.ec
    User root

# Secondary router ("dumb ap")
Host aragorn
    Tag colusa
    HostName aragorn.ec
    User root

# Garage door router ("dumb ap")
Host elfstone
    Tag colusa
    HostName elfstone.ec
    User root

