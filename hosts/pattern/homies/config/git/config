###
### difftastic configuration (from https://difftastic.wilfred.me.uk/git.html)
###
[diff]
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft --color=always "$LOCAL" "$REMOTE"
[alias]
	difft = difftool
