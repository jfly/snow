###
### Delta configuration (copied from
### https://github.com/dandavison/delta#get-started)
###
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	syntax-theme = ansi
	true-color = never
	diff-so-fancy = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
